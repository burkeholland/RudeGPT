@using RudeGPT.Shared
@using Azure.AI.OpenAI

@if (message.Role == ChatRole.User)
{
    <div class="p-5">
        <div class="container">
            <p>@message.Content</p>
        </div>
    </div>
}
else
{
    <div class="has-background-light p-5">
        <div class="container">
            <p>@message.Content</p>
        </div>
    </div>
}


@code {
    [Parameter]
    public Message message { get; set; } = new Message();
}